}


\newcommand\insertfigr[3]{
\begin{minipage}[t]{#2\linewidth}
\begin{figure}[H]
\centering
\includegraphics[width=\textwidth]{#1}
\caption{#3}\label{#1}
\end{figure}
\end{minipage}
}

