\newcommand\insertfig[3]{
\begin{figure}[H]
\centering
\includegraphics[width=#2\textwidth]{#1}
\caption{#3}\label{#1}
\end{figure}
}

\newcommand\insertfigfloat[3]{
\begin{figure}
\centering
\includegraphics[width=#2\textwidth]{#1}
\caption{#3}\label{#1}
